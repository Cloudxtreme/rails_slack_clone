<li class="media message" data-id="<%= message.id %>">
  <%= link_to image_tag(message.user.avatar_url, alt: message.user.username, class: "media-object"), "#", target: '_blank', class: 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to message.user.username, "#", target: '_blank' %> dice
      <small class="text-muted">[at <%= message.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small></h4>
    <p><%= message.content %></p>
  </div>
</li>
